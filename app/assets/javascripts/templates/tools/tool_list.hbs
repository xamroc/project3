{{#each users}}
  {{#each links/tools}}
  <div class="row">
    <div class="small-4 large-4 columns">
      <p class="edit-tool-item" data-id="{{id}}">{{name}}</p>
    </div>
    <div class="onoffswitch small-8 large-8 columns">
      <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="{{name}}" data-id="{{id}}" {{#if availability}}checked{{/if}} >
      <label class="onoffswitch-label" for="{{name}}">
        <div class="onoffswitch-inner"></div>
      </label>
    </div>
  </div>
  {{/each}}
{{/each}}